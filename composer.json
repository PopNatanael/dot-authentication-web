{
  "name": "dotkernel/dot-authentication-web",
  "type": "library",
  "description": "DotKernel login/logout authentication flow for web based applications",
  "license": "MIT",
  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "psr/http-message": "^1.0.1",
    "http-interop/http-middleware": "^0.4.1",
    "zendframework/zend-servicemanager": "^3.3.0",
    "zendframework/zend-expressive-helpers": "^3.0",

    "dotkernel/dot-authentication": "^0.1",
    "dotkernel/dot-event": "^0.1",
    "dotkernel/dot-flashmessenger": "^0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",

    "zendframework/zend-stdlib": "^3.1",
    "zendframework/zend-diactoros": "^1.3.10",
    "zendframework/zend-expressive-template": "^1.0.4"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Authentication\\Web\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\Authentication\\Web\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1-dev",
      "dev-develop": "0.2-dev"
    }
  }
}
